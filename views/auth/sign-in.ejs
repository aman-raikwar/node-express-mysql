<%- contentFor('bodyContent') %>    
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Sign In            
                </div>
                <div class="panel-body">
                    <% if(response.success) { %>
                        <div class="alert alert-success"><%- response.msg %></div>
                    <% } else if(response.msg) { %>
                        <div class="alert alert-danger"><%- response.msg %></div>
                    <% } %>
                    <form class="form-horizontal" method="post" action="/auth/sign-in" autocomplete="off">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Email</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="<%= params.email %>">
                            </div>
                        </div>                      
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="password">Password</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="<%= params.password %>">
                            </div>
                        </div>                      
                        <div class="form-group"> 
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>  
        </div>
    </div>   