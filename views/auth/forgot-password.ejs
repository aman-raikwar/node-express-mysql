<%- contentFor('pageContent') %>  
    <div class="login-box card">
        <div class="card-body">
            <form class="form-horizontal form-material" id="loginform" action="/auth/sign-in">
                <h1><a href="javascript:void(0)" class="text-center db">NodeExpress</a></h1>
                <div class="form-group m-t-40">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Email Address">
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Send</button>
                    </div>
                </div>
                <div class="form-group m-b-0">
                    <div class="col-sm-12 text-center">
                        <p>Already have an account? <a href="/auth/sign-in" class="text-info m-l-5"><b>Sign In</b></a></p>
                    </div>
                </div>
            </form>            
        </div>
    </div>   