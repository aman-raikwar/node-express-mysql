<a href="javascript:void(0);" class="sort" data-type="<%- type %>" data-sort="<%- orderColumn == type ? (orderBy == 'ASC' ? 'DESC' : 'ASC') : 'ASC' %>">
    <%- columnName %>
    <% 
    if (orderColumn == type) {
        if(orderBy == 'ASC') {
            %><i class="fa fa-sort-amount-asc pull-right"></i><%
        } else {
            %><i class="fa fa-sort-amount-desc pull-right"></i><%
        }
    } else {
        %><i class="fa fa-sort-amount-desc pull-right"></i><%
    } 
    %>                                
</a>